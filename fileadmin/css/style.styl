colors = {
  yellow : #fbc820,
  orange : #f68939,
  purple : #f15f7d,
  pink : #d64f9d,
  blue : #3757a7,
  turquoise : #5dc3e9,
  green : #66be5e
}

a
  color #34a2cb

body
  font-family 'Lato', sans-serif
  /* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#f5f5f5+0,ffffff+100 */
  background rgba(255,255,255,.9) /* Old browsers */
  // background -moz-linear-gradient(top,  #f5f5f5 0%, #ffffff 100%) /* FF3.6-15 */
  // background -webkit-linear-gradient(top,  #f5f5f5 0%,#ffffff 100%) /* Chrome10-25,Safari5.1-6 */
  // background linear-gradient(to bottom,  #f5f5f5 0%,#ffffff 100%) /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
  font-size 130%
  line-height 163%
  font-weight 300

.container.narrow
  max-width 870px !important

.nav-pills
  background-size 40px
  background-color rgba(255,255,255,.97)
  z-index 999
  position absolute
  left 0
  right 0
  font-weight 400
  text-align center
  &.skrollable-after
    // border-bottom 3px solid #f4f4f4
  > li
    margin 0
    display inline-block
    float none
    + li
      margin 0
    > a
      padding 1.25em .5em
      &:hover
      &.active:hover
        color #333
        background transparent
  img.logo
    width 30px
    vertical-align middle
    margin -3px 20px 0 -50px

.navbar
  z-index 1000
  position fixed
  left 0
  right 0
  background transparent
  border 0
  /* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#ffffff+0,ffffff+100&1+0,0+100;White+to+Transparent */
  background: -moz-linear-gradient(top, rgba(255,255,255,1) 45%, rgba(255,255,255,0) 100%); /* FF3.6-15 */
  background: -webkit-linear-gradient(top, rgba(255,255,255,1) 45%,rgba(255,255,255,0) 100%); /* Chrome10-25,Safari5.1-6 */
  background: linear-gradient(to bottom, rgba(255,255,255,1) 45%,rgba(255,255,255,0) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
  // filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#00ffffff',GradientType=0 ); /* IE6-9 */

.navbar .navbar-brand
  height 120px
  float none
  padding 0

.navbar .search-field
  height 50px
  margin 15px 0 0 10px

.navbar .navbar-nav a
  line-height 50px
  font-weight 400

.nav>li>a
  color #777
  border-radius 0
  border-bottom 3px solid #f4f4f4

.navbar .navbar-nav
  li.active
  li.active a, li.active a:hover
    background transparent

.nav-pills>li.active>a
  background transparent
  border-bottom 3px solid #777
  color #777

.navbar-spacer
  height 100px

.dropdown-menu
  border 0
  font-size 20px
  background #f5f5f5
  box-shadow none
  pointer-events none
  display block
  opacity 0
  transition .4s
  transform translateY(-10px)

.dropdown:hover .dropdown-menu
  transform translateY(0px)
  pointer-events auto
  opacity 1
  margin-top 0

.dropdown-menu > li > a
  line-height 2em
  padding 3px 40px
  color #34a2cb

nav input.search-field
  background-image url(../img/magnifying-glass.svg)
  background-position 90% center
  background-repeat no-repeat
  background-size 20px
  width 30px
  border-color transparent
  background-color transparent
  transition .5s
  box-shadow none
  &::-webkit-input-placeholder /* WebKit, Blink, Edge */
    color transparent
  &:-moz-placeholder /* Mozilla Firefox 4 to 18 */
     color transparent
  &::-moz-placeholder /* Mozilla Firefox 19+ */
     color transparent
  &:-ms-input-placeholder /* Internet Explorer 10-11 */
     color transparent
  cursor pointer
  color transparent
  &:focus
    cursor auto
    width 250px
    border-color #66afe9
    background-color white
    color #333
    &::-webkit-input-placeholder /* WebKit, Blink, Edge */
      color #333
    &:-moz-placeholder /* Mozilla Firefox 4 to 18 */
       color #333
    &::-moz-placeholder /* Mozilla Firefox 19+ */
       color #333
    &:-ms-input-placeholder /* Internet Explorer 10-11 */
       color #333

h1, h2, h3
  font-weight 300
  position relative

.bold
  font-weight 400

header.main
  width 100%
  height 390px
  overflow hidden
  position relative
  img.logo
    transform translateZ(1px)
    width 80px
    margin 70px auto
    display block
  img.hero
    max-width 1010px
    opacity 0
    position absolute
    left 0
    right 0
    width 70%
    margin 0 auto
    transition opacity 4s
    &.active
      opacity 1

footer
  display block
  height 400px
  width 100%
  background url(../img/mountains.png)
  background-size cover
  background-position bottom center
  background-repeat no-repeat
  text-align center

.footer-logos img
  max-height 80px
  max-width 210px
  line-height 130px
  margin 260px 30px 30px 0

article.sub-page
  font-size 120%
  line-height 160%
  h2
    padding-bottom 1em

section.citation
  color #999
  font-size 80%
  h6
    font-size 1em
    font-weight 300
    text-transform uppercase
  table
    margin 0 auto
  table td:first-child
    padding-right 2em

article .publishing-date
  font-size .8em
  font-weight 400
  margin-top 0.3em

article.intro-text
  margin-top 5em
  text-align justify
  h1 span
    display block
    font-size .6em
    margin-top .5em

article.preview
  padding 2em 0em
  h1.title
    line-height 140%
    margin-top 0
  h5
    letter-spacing .1em
    font-size .8em
    font-weight 600

.news-main article img
  float left
  max-width 40%
  margin-right 2em
  border-radius 5px

article.vortrag
  h5
    color colors["blue"]
  h1.title:before
    content " "
    position absolute
    left -.85em
    display block
    height 1.5em
    width .25em
    background colors["blue"]
  .publishing-date
    color colors["blue"]

article.blog-post
  h5
    color colors["green"]
  h1.title:before
    content " "
    position absolute
    left -.85em
    display block
    height 1.5em
    width .25em
    background colors["green"]
  .publishing-date
    color colors["green"]

.panel.citation .panel-body
  font-size .7em
